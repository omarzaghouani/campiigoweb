<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chart.js Example</title>
    <!-- Inclure Chart.js depuis une CDN -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body>
    <!-- Réduire la taille du canvas en définissant sa largeur et hauteur -->
    <canvas id="myChart" width="400" height="400"></canvas>

    <!-- Stocker les données JSON dans un attribut de données HTML -->
    <div id="chartData" data-chart-data="{{ chartData|e('html_attr') }}"></div>

    <script>
        // Récupérer les données JSON depuis l'attribut de données HTML
        var chartData = JSON.parse(document.getElementById('chartData').dataset.chartData);

        // Récupérer le contexte du canvas
        var ctx = document.getElementById('myChart').getContext('2d');

        // Création du graphique avec Chart.js
        var myChart = new Chart(ctx, {
            type: 'pie', // ou 'doughnut'
            data: {
                labels: chartData.labels,
                datasets: [{
                    label: 'Nombre de centres par ville',
                    data: chartData.data,
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                        // Vous pouvez ajouter plus de couleurs si nécessaire
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                        // Vous pouvez ajouter plus de couleurs si nécessaire
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                // Ajuster la taille du graphique
                layout: {
                    padding: {
                        left: 50,
                        right: 50,
                        top: 50,
                        bottom: 50
                    }
                }
            }
        });
    </script>
</body>
</html>


